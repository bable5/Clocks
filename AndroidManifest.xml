<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.mooney_ware.android.steampunkt"
      android:versionCode="1"
      android:versionName="1.2">
    <uses-sdk android:minSdkVersion="8" />
    
    <uses-feature android:name="android.software.live_wallpaper" />
    
    <application android:icon="@drawable/icon" android:label="@string/app_name"
        android:theme="@android:style/Theme.Translucent"
    >
       <activity android:name="com.mooney_ware.android.steampunkt.ClockFace"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <service
            android:label="@string/app_name"
            android:name=".lwp.ClockLWP"
            android:permission="android.permission.BIND_WALLPAPER">
            <intent-filter>
                <action android:name="android.service.wallpaper.WallpaperService" />
            </intent-filter>
            <meta-data android:name="android.service.wallpaper" android:resource="@xml/cube1" />
        </service>

    </application>
</manifest>